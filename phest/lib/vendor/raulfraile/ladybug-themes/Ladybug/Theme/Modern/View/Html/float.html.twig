{% extends "_base.html.twig" %}

{% block header_extra %}
    {% if var.mathConstant is not null %}
        <span class="pull-right">
            <span class="muted header_extra">
                {% if var.mathConstant == 'pi' %}
                &pi;
                {% elseif var.mathConstant == 'conway' %}
                &lambda;
                {% elseif var.mathConstant == 'euler_mascheroni' %}
                &upsih;
                {% else %}
                    {{ var.mathConstant }}
                {% endif %}
            </span>
        </span>
    {% endif %}
{% endblock %}