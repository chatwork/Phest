{% extends "_base.html.twig" %}

{% set composed = true %}
{% set type_expanded = true %}

{% block type %}<i class="icon-file"></i> {{ var.title }}{% endblock %}

{% block value %}
    <textarea id="code" style="font-weight: normal">{{ var.content }}</textarea>

    <script>
        var editor = CodeMirror.fromTextArea(document.getElementById("code"), {
            mode: {name: "{{ var.language }}", alignCDATA: true},
            lineNumbers: true,
            height: '40'
        });
        editor.setSize(null, 160);
    </script>
{% endblock %}
